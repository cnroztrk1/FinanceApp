@model FinanceApp.Data.Entities.Partners

@{
    ViewData["Title"] = "İş Ortağını Düzenle";
}

<h2>İş Ortağını Düzenle</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Ad</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="ContactEmail">İletişim E-Posta</label>
        <input asp-for="ContactEmail" type="email" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber">Telefon</label>
        <input asp-for="PhoneNumber" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Address">Adres</label>
        <textarea asp-for="Address" class="form-control"></textarea>
    </div>
    <input type="hidden" asp-for="TenantId" value="@Model.TenantId" />
    <button type="submit" class="btn btn-success">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
