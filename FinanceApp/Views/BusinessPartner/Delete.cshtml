@model FinanceApp.Data.Entities.Partners

@{
    ViewData["Title"] = "İş Ortağını Sil";
}

<h2>İş Ortağını Sil</h2>

<h3>Bu iş ortağını silmek istediğinize emin misiniz?</h3>
<div>
    <h4>@Model.Name</h4>
    <p><strong>İletişim E-Posta:</strong> @Model.ContactEmail</p>
    <p><strong>Telefon:</strong> @Model.PhoneNumber</p>
    <p><strong>Adres:</strong> @Model.Address</p>
</div>

<form asp-action="DeleteConfirmed" asp-controller="BusinessPartner" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="TenantId" value="@Model.TenantId" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
