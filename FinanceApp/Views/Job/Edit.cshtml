@model FinanceApp.Presentation.Models.JobCreateViewModel

@{
    ViewData["Title"] = "İşi Düzenle";
}

<h2>İşi Düzenle</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Job.Id" />
    <div class="form-group">
        <label asp-for="Job.Title">Başlık</label>
        <input asp-for="Job.Title" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Job.Description">Açıklama</label>
        <textarea asp-for="Job.Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Job.ReceivedDate">Alınma Tarihi</label>
        <input asp-for="Job.ReceivedDate" type="date" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Job.Status">Durum</label>
        <select asp-for="Job.Status" class="form-control">
            <option value="Beklemede">Beklemede</option>
            <option value="Tamamlandı">Tamamlandı</option>
            <option value="İptal Edildi">İptal Edildi</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Job.BusinessPartnerId">İş Ortağı</label>
        <select asp-for="Job.BusinessPartnerId" asp-items="Model.BusinessPartners" class="form-control">
            <option value="">Seçiniz...</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Job.AgreementId">Anlaşma</label>
        <select asp-for="Job.AgreementId" asp-items="Model.Agreements" class="form-control">
            <option value="">Seçiniz...</option>
        </select>
    </div>
    <input type="hidden" asp-for="Job.TenantId" value="@Model.Job.TenantId" />
    <button type="submit" class="btn btn-success">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
