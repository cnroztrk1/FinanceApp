@model FinanceApp.Data.Entities.Jobs

@{
    ViewData["Title"] = "İşi Sil";
}

<h2>İşi Sil</h2>

<h3>Bu işi silmek istediğinize emin misiniz?</h3>
<div>
    <h4>@Model.Title</h4>
    <p><strong>Açıklama:</strong> @Model.Description</p>
    <p><strong>Durum:</strong> @Model.Status</p>
    <p><strong>Alınma Tarihi:</strong> @Model.ReceivedDate.ToShortDateString()</p>
</div>

<form asp-action="DeleteConfirmed" asp-controller="Job" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="TenantId" value="@Model.TenantId" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
