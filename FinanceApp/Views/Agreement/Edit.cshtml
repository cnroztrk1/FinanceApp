@model FinanceApp.Data.Entities.Agreement

@{
    ViewData["Title"] = "Anlaşmayı Düzenle";
}

<h2>Anlaşmayı Düzenle</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">Ad</label>
        <input asp-for="Name" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Description">Açıklama</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="StartDate">Başlangıç Tarihi</label>
        <input asp-for="StartDate" type="date" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="IsActive">Durum</label>
        <select asp-for="IsActive" class="form-control">
            <option value="true">Aktif</option>
            <option value="false">Pasif</option>
        </select>
    </div>
    <input type="hidden" asp-for="TenantId" value="@Model.TenantId" />
    <button type="submit" class="btn btn-success">Güncelle</button>
    <a asp-action="Index" class="btn btn-secondary">Geri</a>
</form>
