@model FinanceApp.Data.Entities.Agreement

@{
    ViewData["Title"] = "Anlaşmayı Sil";
}

<h2>Anlaşmayı Sil</h2>

<h3>Bu anlaşmayı silmek istediğinize emin misiniz?</h3>
<div>
    <h4>@Model.Name</h4>
    <p><strong>Açıklama:</strong> @Model.Description</p>
    <p><strong>Başlangıç Tarihi:</strong> @Model.StartDate.ToShortDateString()</p>
    <p><strong>Durum:</strong> @(Model.IsActive ? "Aktif" : "Pasif")</p>
</div>

<form asp-action="DeleteConfirmed" asp-controller="Agreement" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="TenantId" value="@Model.TenantId" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
