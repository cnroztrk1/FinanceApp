@model IEnumerable<FinanceApp.Data.Entities.RiskAnalysis>
@{
    ViewData["Title"] = "Risk Analizleri";
}

<h2>Risk Analizleri</h2>

<a class="btn btn-primary" href="@Url.Action("Create", "RiskAnalysis")">Yeni Risk Analizi Ekle</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Risk Tutarı</th>
            <th>Analiz Tarihi</th>
            <th>Açıklama</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var risk in Model)
        {
            <tr>
                <td>@risk.Id</td>
                <td>@risk.RiskAmount</td>
                <td>@risk.AnalysisDate.ToShortDateString()</td>
                <td>@risk.Comments</td>
                <td>
                    <a href="@Url.Action("Edit", "RiskAnalysis", new { id = risk.Id })">Düzenle</a> |
                    <a href="@Url.Action("Delete", "RiskAnalysis", new { id = risk.Id })">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
