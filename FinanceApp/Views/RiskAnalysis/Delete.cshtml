@model FinanceApp.Data.Entities.RiskAnalysis

@{
    ViewData["Title"] = "Risk Analizini Sil";
}

<h2>Risk Analizini Sil</h2>

<h3>Bu risk analizini silmek istediğinize emin misiniz?</h3>
<div>
    <p><strong>Risk Miktarı:</strong> @Model.RiskAmount</p>
    <p><strong>Açıklamalar:</strong> @Model.Comments</p>
    <p><strong>Analiz Tarihi:</strong> @Model.AnalysisDate.ToShortDateString()</p>
</div>

<form asp-action="DeleteConfirmed" asp-controller="RiskAnalysis" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="TenantId" value="@Model.TenantId" />
    <button type="submit" class="btn btn-danger">Evet, Sil</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
